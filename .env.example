# ============================================
# GULYALY PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ============================================

# Database (PostgreSQL REQUIRED for production)
DATABASE_URL="postgresql://username:password@localhost:5432/gulyaly_shop?schema=public"

# NextAuth Configuration
# IMPORTANT: Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="https://gulyaly.com"
NEXTAUTH_SECRET="your-32-char-minimum-secret-here"

# Admin Credentials (REQUIRED for production)
# Generate hash with: npx bcrypt hash-password "your-secure-password"
ADMIN_EMAIL="admin@gulyaly.com"
ADMIN_PASSWORD_HASH="$2a$12$YourBcryptHashHere..."

# Application URLs (MUST be domain-safe for production)
NEXT_PUBLIC_APP_URL="https://gulyaly.com"
NEXT_PUBLIC_URL="https://gulyaly.com"

# Stripe Configuration (REQUIRED for payments)
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLIC_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# SMS Gateway Configuration (optional)
# ibnux.net configuration or set via admin panel
SMS_DEVICE_ID=""
SMS_SECRET=""
SMS_GATEWAY_URL="https://sms.ibnux.net/"
SMS_SIM_NUMBER="0"

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN="123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11"
TELEGRAM_CHAT_ID="123456789"

# Email Notifications (optional, SMTP)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"

# Node Environment
# IMPORTANT: Set to "production" for VPS deployment
NODE_ENV="production"