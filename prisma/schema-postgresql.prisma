generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(uuid())
  email           String?          @unique
  password        String?
  name            String?
  avatar          String?
  phone           String?          @unique
  phoneVerified   Boolean          @default(false)
  otp             String?
  otpExpiresAt    DateTime?
  role            Role             @default(USER)
  isOnline        Boolean          @default(false)
  lastSeenAt      DateTime         @default(now())
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  orders          Order[]
  addresses       Address[]
  sentMessages    SupportMessage[] @relation("SupportMessageSender")
  supportMessages SupportMessage[]
  adminLogs       AdminLog[]

  @@map("users")
}

model Product {
  id          String           @id @default(uuid())
  name        String
  description String
  image       String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  images      Json?
  orders      Order[]
  variants    ProductVariant[]

  @@map("products")
}

model ProductVariant {
  id            String   @id @default(uuid())
  productId     String
  name          String
  price         Int
  originalPrice Int?
  image         String?
  inStock       Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  orders        Order[]

  @@map("product_variants")
}

model Address {
  id          String   @id @default(uuid())
  userId      String
  name        String
  phone       String
  address     String
  city        String
  postalCode  String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("addresses")
}

model Order {
  id              String      @id @default(uuid())
  userId          String
  productId       String
  variantId       String
  amount          Int
  status          OrderStatus @default(PENDING)
  stripeSessionId String?      @unique
  customerEmail   String?
  customerPhone   String?
  customerName    String?
  deliveryAddress String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  product         Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant         ProductVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@map("orders")
}

model SupportMessage {
  id        String   @id @default(uuid())
  userId    String?
  senderId  String?
  message   String
  isAdmin   Boolean  @default(false)
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation("SupportMessageSender", fields: [senderId], references: [id], onDelete: Set NULL)
  support   User?    @relation(fields: [userId], references: [id], onDelete: Set NULL)

  @@map("support_messages")
}

model AdminLog {
  id          String   @id @default(uuid())
  adminId     String
  action      String
  resource    String?
  resourceId  String?
  details     Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  admin       User     @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@map("admin_logs")
}

model SystemSetting {
  id          String   @id @default(uuid())
  key         String   @unique
  value       Json?
  description String?
  updatedAt   DateTime @updatedAt

  @@map("system_settings")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
