generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(cuid())
  email           String?          @unique
  password        String?
  name            String?
  avatar          String?
  phone           String?          @unique
  phoneVerified   Boolean          @default(false)
  otp             String?
  otpExpiresAt    DateTime?
  role            Role             @default(USER)
  isOnline        Boolean          @default(false)
  lastSeenAt      DateTime         @default(now())
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  orders          Order[]
  addresses       Address[]
  sentMessages    SupportMessage[] @relation("SupportMessageSender")
  supportMessages SupportMessage[]

  @@map("users")
}

model Product {
  id          String           @id @default(cuid())
  name        String
  description String
  image       String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  images      Json?
  orders      Order[]
  variants    ProductVariant[]

  @@map("products")
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  name        String
  price       Int
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_variants")
}

model Order {
  id              String         @id @default(cuid())
  userId          String
  productId       String
  variantId       String
  amount          Int
  status          OrderStatus  @default(PENDING)
  stripeSessionId String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  variant         ProductVariant @relation(fields: [variantId], references: [id])
  product         Product        @relation(fields: [productId], references: [id])
  user            User           @relation(fields: [userId], references: [id])

  @@map("orders")
}

model SupportMessage {
  id             String        @id @default(cuid())
  userId         String
  senderId       String?
  subject        String
  message        String
  status         SupportStatus @default(NEW)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  attachment     String?
  attachmentType String?
  reactions      Json?
  sender         User?         @relation("SupportMessageSender", fields: [senderId], references: [id])
  user           User          @relation(fields: [userId], references: [id])

  @@map("support_messages")
}

model FooterSettings {
  id          String   @id @default(cuid())
  companyName String   @default("Gulyaly")
  email       String   @default("info@gulyaly.com")
  phone       String   @default("+7 (999) 123-45-67")
  telegram    String?
  whatsapp    String?
  vk          String?
  instagram   String?
  description String   @default("Цифровой магазин. Просто. Быстро. Красиво.")
  year        Int      @default(2026)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("footer_settings")
}

model SMSSettings {
  id         String   @id @default(cuid())
  deviceID   String   @default("")
  secret     String   @default("")
  gatewayURL String   @default("https://sms.ibnux.net/")
  simNumber  Int      @default(0)
  enabled    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("sms_settings")
}

model SMSLog {
  id        String   @id @default(cuid())
  to        String
  text      String
  status    String
  response  String?
  error     String?
  createdAt DateTime @default(now())

  @@map("sms_logs")
}

model Address {
  id          String      @id @default(cuid())
  userId      String
  title       String      // "Дом", "Работа", "Другое"
  street      String      // Улица
  house       String      // Дом
  apartment   String?     // Квартира/офис
  entrance    String?     // Подъезд
  floor       String?     // Этаж
  intercom    String?     // Домофон
  comment     String?     // Комментарий для курьера
  isDefault   Boolean     @default(false) // Основной адрес
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("addresses")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  COMPLETED
  CANCELLED
}

enum SupportStatus {
  NEW
  READ
  REPLIED
}
