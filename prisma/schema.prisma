generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER & AUTH ====================

model User {
  id              String           @id @default(cuid())
  email           String?          @unique
  password        String?          // Hashed password (for admin)
  name            String?
  avatar          String?
  phone           String?          @unique
  phoneVerified   Boolean          @default(false)
  otp             String?
  otpExpiresAt    DateTime?
  role            Role             @default(USER)
  isOnline        Boolean          @default(false)
  lastSeenAt      DateTime         @default(now())
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  orders          Order[]
  addresses       Address[]
  sentMessages    SupportMessage[] @relation("SupportMessageSender")
  supportMessages SupportMessage[]

  // Indexes for performance
  @@index([email])
  @@index([phone])
  @@index([role])
  @@index([createdAt])
  @@map("users")
}

enum Role {
  USER
  ADMIN
}

// ==================== STORE (Multi-Store Marketplace) ====================

model Store {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique // URL-friendly identifier (e.g., "adidas", "nike")
  description String?
  logo        String?
  banner      String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]

  // Indexes
  @@index([slug])
  @@index([isActive])
  @@map("stores")
}

// ==================== PRODUCTS ====================

model Product {
  id          String           @id @default(cuid())
  storeId     String?
  name        String
  description String
  image       String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  images      Json?
  store       Store?           @relation(fields: [storeId], references: [id], onDelete: SetNull)
  orders      Order[]
  variants    ProductVariant[]

  // Indexes
  @@index([storeId])
  @@index([isActive])
  @@index([createdAt])
  @@map("products")
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  name        String
  price       Int      // Stored in kopecks
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([productId])
  @@index([price])
  @@map("product_variants")
}

// ==================== ORDERS ====================

model Order {
  id              String         @id @default(cuid())
  userId          String
  productId       String
  variantId       String
  amount          Int            // Stored in kopecks
  status          OrderStatus    @default(PENDING)
  stripeSessionId String?   @unique
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  variant         ProductVariant @relation(fields: [variantId], references: [id])
  product         Product        @relation(fields: [productId], references: [id])
  user            User           @relation(fields: [userId], references: [id])

  // Indexes
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([stripeSessionId])
  @@map("orders")
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  COMPLETED
  CANCELLED
}

// ==================== SUPPORT ====================

model SupportMessage {
  id             String        @id @default(cuid())
  userId         String
  senderId       String?
  subject        String
  message        String
  status         SupportStatus @default(NEW)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  attachment     String?
  attachmentType String?
  reactions      Json?
  sender         User?         @relation("SupportMessageSender", fields: [senderId], references: [id])
  user           User          @relation(fields: [userId], references: [id])

  // Indexes
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("support_messages")
}

enum SupportStatus {
  NEW
  READ
  REPLIED
}

// ==================== ADDRESSES ====================

model Address {
  id          String   @id @default(cuid())
  userId      String
  title       String   // "Home", "Work", etc.
  street      String
  house       String
  apartment   String?
  entrance    String?
  floor       String?
  intercom    String?
  comment     String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([userId])
  @@map("addresses")
}

// ==================== SETTINGS ====================

model FooterSettings {
  id          String   @id @default(cuid())
  companyName String   @default("Gulyaly")
  email       String   @default("info@gulyaly.com")
  phone       String   @default("+7 (999) 123-45-67")
  telegram    String?
  whatsapp    String?
  vk          String?
  instagram   String?
  description String   @default("Digital store. Simple. Fast. Beautiful.")
  year        Int      @default(2026)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("footer_settings")
}

model SMSSettings {
  id         String   @id @default(cuid())
  deviceID   String   @default("")
  secret     String   @default("")
  gatewayURL String   @default("https://sms.ibnux.net/")
  simNumber  Int      @default(0)
  enabled    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("sms_settings")
}

model SMSLog {
  id        String   @id @default(cuid())
  to        String
  text      String
  status    String
  response  String?
  error     String?
  createdAt DateTime @default(now())

  // Indexes
  @@index([to])
  @@index([createdAt])
  @@map("sms_logs")
}

// ==================== RATE LIMITING ====================

model RateLimit {
  id        String   @id @default(cuid())
  identifier String  // IP, phone, email, etc.
  action    String   // What action is being rate limited
  count     Int      @default(0)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for fast lookups and cleanup
  @@index([identifier, action])
  @@index([expiresAt])
  @@map("rate_limits")
}

// ==================== ACCOUNT LOCKOUT ====================

model AccountLockout {
  id          String   @id @default(cuid())
  identifier  String   // IP, email, phone
  reason      String   // Reason for lockout
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  // Indexes
  @@index([identifier])
  @@index([expiresAt])
  @@map("account_lockouts")
}
